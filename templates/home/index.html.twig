{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('home') }}
{% endblock %}

{% block body %}
    <div class="container text-center">
        <div class="row">
            <div class="col col-bg">
                Column
            </div>
            <div class="col second-col">
                <i class="fa-solid fa-user"></i>
                <span id="tooltip-user">User</span>
            </div>
            <div class="col third-col">
                <a class="btn btn-primary" href="#" role="button">Overriding primary color</a>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="box">
                    <label class="form-check-label" for="box">
                        Say hello in console
                    </label>
                </div>
            </div>
            <div class="col-12 copy-file">
                <h2>Coping files</h2>
                <img src="{{ asset('build/static/fourchette.jpg') }}" alt="hello">
            </div>
        </div>
    </div>
{% endblock %}